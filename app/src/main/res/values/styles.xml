<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorButtonNormal">@color/primary_color</item>
        <item name="alertDialogStyle">@style/LocaleDialogTheme</item>
    </style>

    <!--Default App theme-->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/musicPlayerColorPrimary</item>
        <item name="colorPrimaryDark">@color/musicPlayerColorPrimaryDark</item>
        <item name="colorAccent">@color/musicPlayerColorAccent</item>
        <item name="colorButtonNormal">@color/musicPlayerColorAccent</item>
    </style>


    <!--Language selection dialog theme-->
    <style name="LocaleDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/primary_dark_color</item>
        <item name="android:textColor">@color/tan_background</item>
        <item name="android:textColorAlertDialogListItem">@color/tan_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!--Just Java App custom styles-->
    <!--Just java App theme-->
    <style name="JustJavaAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
    <!-- Style for Header TextViews -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">left|start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!--Court Counter App custom styles-->
    <!--Court Counter App theme-->
    <style name="CourtCounterAppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/courtCounterColorPrimary</item>
        <item name="colorPrimaryDark">@color/courtCounterColorPrimaryDark</item>
        <item name="colorAccent">@color/courtCounterColorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/courtCounterColorAccent</item>
    </style>


    <!--Music Player App custom styles-->
    <!--Music Player App theme-->
    <style name="MusicPlayerAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/musicPlayerColorPrimary</item>
        <item name="colorPrimaryDark">@color/musicPlayerColorPrimaryDark</item>
        <item name="colorAccent">@color/musicPlayerColorAccent</item>
        <item name="colorButtonNormal">@color/musicPlayerColorAccent</item>
    </style>


    <!--Miwok App custom styles-->
    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>
</resources>

